@page "/userUpdate/{userId}"

@using BlueNet.Manager.Components;

<h3> User Edit</h3>

@if(userUpdateRequest == null)
{
    <LoadingIndicator />
}
else
{
    <EditForm Model="userUpdateRequest" OnValidSubmit="SubmitUpdateUser">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label for="UserName">UserName</label>
        <InputText class="form-control" @bind-Value="userUpdateRequest.UserName"></InputText>
        <ValidationMessage For="()=>userUpdateRequest.UserName"></ValidationMessage>
        <small id="userNameHelp" class="form-text text-muted">Please enter user title here.</small>
    </div>

  
    <div class="form-group">
        <label for="Email">Email</label>
        <InputText class="form-control" @bind-Value="userUpdateRequest.Email"></InputText>
        <ValidationMessage For="()=>userUpdateRequest.Email"></ValidationMessage>
        <small id="EmailHelp" class="form-text text-muted">Please enter user title here.</small>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>
}


